  },
  "repository": {
    "type": "git",
    "url": "https://github.com/surf-build/surf"
  },
  "keywords": [
    "build",
    "ci"
  ],
  "author": "Paul Betts <paul@paulbetts.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/surf-build/surf/issues"
  },
  "homepage": "https://github.com/surf-build/surf",
  "dependencies": {
    "chalk": "^1.1.3",
    "death": "^1.1.0",
    "debug": "^2.6.3",
    "fs-extra": "^2.1.2",
    "ini": "^1.3.4",
    "iso8601": "^1.1.1",
    "lodash": "^4.17.4",
    "lru-cache": "^4.0.2",
    "mime-types": "^2.1.15",
    "mkdirp": "^0.5.1",
    "nodegit": "^0.18.3",
    "parse-link-header": "^0.4.1",
    "pify": "^2.3.0",
    "request-promise": "^4.2.0",
    "rimraf": "^2.6.1",
    "rxjs": "^5.3.0",
    "spawn-rx": "^2.0.10",
    "string-argv": "0.0.2",
    "temp": "^0.8.3",
    "xml-escape": "^1.1.0",
    "yargs": "^7.0.2"
  },
  "devDependencies": {
    "@kwonoj/rxjs-testscheduler-compat": "1.0.1",
    "@paulcbetts/coveralls": "^2.11.13",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "eslint": "^3",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "@types/node": "^8.0.22"
  }
